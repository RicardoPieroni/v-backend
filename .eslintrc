{
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "plugins": [
        "import"
    ],
    "env": {
        "mocha": true,
        "node": true
    },
    "globals": {
        "chai": false,
        "sinon": false,
        "should": false,
        "expect": false
    },
    "rules": {
        "indent": [2, 4],
        "max-len": "off",
        "class-methods-use-this": "off",
        "no-underscore-dangle": ["error", { "allow": ["_id", "_doc", "__v"] }]
    }
}
